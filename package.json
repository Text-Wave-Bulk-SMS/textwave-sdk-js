{
    "name": "textwave-sdk",
    "version": "1.0.0",
    "description": "Official TextWave Bulk SMS API SDK for JavaScript/Node.js",
    "main": "dist/index.cjs",
    "module": "dist/index.mjs",
    "types": "dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.cjs"
        }
    },
    "files": [
        "dist",
        "README.md",
        "LICENSE"
    ],
    "scripts": {
        "build": "tsup src/index.ts --format cjs,esm --dts --clean",
        "prepublishOnly": "npm run build",
        "test": "node test/test.js"
    },
    "keywords": [
        "textwave",
        "sms",
        "bulk-sms",
        "kenya",
        "africa",
        "api",
        "sdk",
        "messaging"
    ],
    "author": "TextWave <support@textwave.co.ke>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/Text-Wave-Bulk-SMS/textwave-sdk-js.git"
    },
    "homepage": "https://textwave.co.ke",
    "bugs": {
        "url": "https://github.com/Text-Wave-Bulk-SMS/textwave-sdk-js/issues"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "devDependencies": {
        "tsup": "^8.0.0",
        "typescript": "^5.3.0"
    }
}